@model KisiselBlog.Models.Paylasimlar
@using System.Globalization;

<link href="~/css/shCore.css" rel="stylesheet" />
<link href="~/css/shThemeDefault.css" rel="stylesheet" />


<script src="~/js/shCore.js"></script>
<script src="~/js/shBrushCSharp.js"></script>
<script src="~/js/shBrushXml.js"></script>
<script src="~/js/shBrushJScript.js"></script>
<article class="box post post-excerpt">
    <header>

        <h2><a href="#">@Model.PaylasimBaslik</a></h2>
    </header>
    <div class="info">
        <span class="date"><span class="month">@CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(Model.PaylasimTarih.Value.Month)<span>y</span></span> <span class="day">@Model.PaylasimTarih.Value.Day</span><span class="year">, @Model.PaylasimTarih.Value.Year</span></span>
        <ul class="stats">
            <li><a href="#" class="icon fa-eye">@Model.PaylasimGorulmeSayisi</a></li>
            <li><a href="#" class="icon fa-comment">15</a></li>
            <li><a href="#" class="icon fa-heart">@Model.PaylasimBegenmeSayisi</a></li>
        </ul>
    </div>
    @if (Model.PaylasimResimGorunur)
    {
        <a href="#" class="image featured"><img src="/images/@Model.PaylasimResim" alt="" /></a>

    }
    <p>
        @Html.Raw(Model.PaylasimHTML)
    </p>

</article>

